<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/main.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Tasks app</title>
  </head>
  <body class="bg-zinc-800">
    <div class="w-full h-screen">
      <div>
        <form class="flex flex-col p-8 mx-14" method="post" action="/create">
          <h3 class="text-2xl font-bold text-white mx-4">Title</h3>
          <input type="text" class="p-2 m-4 bg-zinc-400" name="title"/>
          <h3 class="text-2xl font-bold text-white mx-4" >Details</h3>
          <input type="text" class="p-8 m-4 bg-zinc-400" name="details" />
          <button
            type="submit"
            class="bg-blue-600 max-w-48 mx-4 p-4 rounded-lg"
          >
            Create
          </button>
        </form>
      </div>
      <div
        id="tasks"
        class="flex flex-row gap-2 mx-16 my-10 p-10 flex-wrap"
      >

      <% files.forEach((file)=>{ %>
            <div class="bg-zinc-600 p-6 w-60">
          <h2 class="text-xl text-white mr-12"><%= file.replace(".txt","")%></h4>
          <a class="text-blue-600" href='/file/<%=file.replace(".txt","")%>'>
            Read more...
          </a>
        </div>
      <%  }) %>
              </div>
    </div>
  </body>
</html>
